---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  lang?: string;
}

const {
  title = 'Bashkirtseff â€” The Complete Diary',
  description = 'Read Marie Bashkirtseff\'s complete, uncensored diary. Free, accessible, in multiple languages.',
  lang = 'cs',
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,400;0,600;1,400&family=Inter:wght@400;500;600&display=swap"
      rel="stylesheet"
    />

    <!-- PWA -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#B45309" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
  </body>
</html>

<script>
  // Update HTML lang attribute based on user's UI locale preference
  const savedLocale = localStorage.getItem('ui-language');
  if (savedLocale && ['cs', 'en', 'fr'].includes(savedLocale)) {
    document.documentElement.setAttribute('lang', savedLocale);
  }
</script>
