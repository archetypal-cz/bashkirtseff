---
import ReadingLayout from '../../../layouts/ReadingLayout.astro';
import ParagraphMenu from '../../../components/reading/ParagraphMenu.vue';
import FlipParagraph from '../../../components/reading/FlipParagraph.vue';
import { getCarnet000Merged, hasCarnet000Content } from '../../../lib/content';

const entry = getCarnet000Merged('cz');
const hasOriginal = hasCarnet000Content('_original');

if (!entry) {
  return Astro.redirect('/cz');
}

const processedParagraphs = entry.paragraphs.map(p => ({
  ...p,
  htmlId: `p-${p.id.replace('.', '-')}`,
}));
---

<ReadingLayout title="Předmluva — Marie Bashkirtseff">
  <article class="max-w-3xl mx-auto">
    <nav class="mb-6 text-sm text-muted">
      <a href="/cz" class="hover:text-accent">Deník</a>
      <span class="mx-2">›</span>
      <span class="text-ink">Sešit 000</span>
    </nav>

    <header class="mb-8 pb-6 border-b border-ink/10">
      <h1 class="text-3xl md:text-4xl font-normal text-ink mb-2" style="font-family: var(--font-serif);">
        {entry.title}
      </h1>

      <p class="text-ink-light leading-relaxed mb-4">
        Tento text je <strong>retrospektivní předmluva</strong> Marie Bashkirtseff,
        napsaná v <strong>květnu 1884</strong>, přibližně pět měsíců před její smrtí.
        Jde o souvislý text, nikoli denní záznamy.
      </p>

      <div class="flex items-center gap-4 text-sm text-muted">
        <span>Květen 1884</span>
        <span class="text-ink/30">|</span>
        <span>{entry.paragraphs.length} odstavců</span>

        {hasOriginal && (
          <>
            <span class="text-ink/30">|</span>
            <a href="/original/000" class="text-accent hover:text-accent-light">
              Francouzský originál →
            </a>
          </>
        )}
      </div>
    </header>

    <div class="prose-diary space-y-6">
      {processedParagraphs.map(paragraph => (
        <div
          id={paragraph.htmlId}
          class="group relative paragraph-container scroll-mt-24"
          data-paragraph-id={paragraph.id}
          style="perspective: 1000px;"
        >
          {/* Flip card with translation and original */}
          <FlipParagraph
            client:visible
            paragraphId={paragraph.id}
            htmlContent={paragraph.html}
            originalText={paragraph.originalText}
            languages={paragraph.languages}
            translationLang="cz"
          />

          {/* Paragraph menu - positioned at bottom right for mobile accessibility */}
          <div class="absolute -bottom-3 right-8 opacity-50 hover:opacity-100 group-hover:opacity-100 transition-opacity z-10" style="transform: translateZ(100px); transform-style: flat;">
            <ParagraphMenu
              client:visible
              paragraphId={paragraph.id}
              glossaryTags={paragraph.glossaryTags}
            />
          </div>
        </div>
      ))}
    </div>

    {/* Footnotes */}
    {entry.footnotes.length > 0 && (
      <section class="footnotes">
        <h2 class="footnotes-title">Poznámky</h2>
        {entry.footnotes.map(fn => (
          <div
            id={`fn-${fn.id}`}
            class="footnote-item"
            data-fn={fn.id}
            set:html={fn.text}
          />
        ))}
      </section>
    )}

    <nav class="mt-12 pt-8 border-t border-ink/10 flex justify-between items-center">
      <a href="/cz" class="text-muted hover:text-ink transition-colors">
        ← Zpět na deník
      </a>

      <a href="/cz/001" class="flex items-center gap-2 text-accent hover:text-accent-light transition-colors">
        <span>Sešit 001</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </nav>
  </article>
</ReadingLayout>

<script>
  // Handle deep linking - highlight paragraph on page load
  document.addEventListener('DOMContentLoaded', () => {
    const hash = window.location.hash;
    if (hash) {
      const element = document.querySelector(hash);
      if (element) {
        element.classList.add('paragraph-highlight');
        setTimeout(() => {
          element.classList.remove('paragraph-highlight');
        }, 2000);
      }
    }
  });
</script>
