---
// Footer component with i18n and version display
import { t as defaultT, createT, type SupportedLocale } from '../../i18n/astro';

interface Props {
  locale?: SupportedLocale;
}

const { locale } = Astro.props;
const t = locale ? createT(locale) : defaultT;

const currentYear = new Date().getFullYear();

// Version info injected at build time via Vite define
declare const __APP_VERSION__: string;
declare const __GIT_COMMIT__: string;

const version = typeof __APP_VERSION__ !== 'undefined' ? __APP_VERSION__ : '0.1.0';
const gitCommit = typeof __GIT_COMMIT__ !== 'undefined' ? __GIT_COMMIT__ : 'dev';
---

<footer class="bg-sepia border-t border-ink/10 mt-auto">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <div class="grid md:grid-cols-3 gap-8">
      <!-- About -->
      <div>
        <h3 class="font-semibold text-ink mb-3">{t('footer.aboutProject')}</h3>
        <p class="text-ink-light text-sm leading-relaxed">
          {t('footer.aboutDescription')}
        </p>
      </div>

      <!-- Links -->
      <div>
        <h3 class="font-semibold text-ink mb-3">{t('footer.links')}</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="/marie" class="text-ink-light hover:text-accent transition-colors">
              {t('footer.aboutMarie')}
            </a>
          </li>
          <li>
            <a href="/about" class="text-ink-light hover:text-accent transition-colors">
              {t('footer.aboutProject')}
            </a>
          </li>
          <li>
            <a href="https://github.com/archetypal-cz/bashkirtseff" class="text-ink-light hover:text-accent transition-colors" target="_blank" rel="noopener">
              {t('footer.contribute')}
            </a>
          </li>
        </ul>
      </div>

      <!-- Quote -->
      <div>
        <blockquote class="text-ink-light italic text-sm border-l-2 border-accent pl-4">
          "{t('quotes.existence')}"
          {t('quotes.existenceOriginal') && (
            <span class="block text-xs text-muted mt-1 not-italic">
              {t('quotes.existenceOriginal')}
            </span>
          )}
          <footer class="mt-2 text-muted not-italic">
            — Marie Bashkirtseff, 1884
          </footer>
        </blockquote>
      </div>
    </div>

    <!-- Copyright & Version -->
    <div class="mt-8 pt-6 border-t border-ink/10 text-sm text-muted">
      <div class="flex items-center gap-4">
        <a href="https://archetypal.cz" target="_blank" rel="noopener" class="shrink-0">
          <img src="/images/archetypal-logo.png" width="48" height="47" alt="archetypal.cz" class="opacity-75 hover:opacity-100 transition-opacity" />
        </a>
        <div>
          <p class="mb-1 flex items-center flex-wrap gap-1.5">
            <a href="https://archetypal.cz" class="hover:text-accent transition-colors" target="_blank" rel="noopener">archetypal.cz</a>
            <span>© {currentYear}</span>
            <a href="mailto:kerray@archetypal.cz" class="hover:text-accent transition-colors">kerray@archetypal.cz</a>
          </p>
          <p class="text-xs opacity-70 flex items-center flex-wrap gap-1">
            <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" class="hover:text-accent transition-colors" target="_blank" rel="noopener license">CC BY-NC-SA 4.0</a>
            <span class="mx-1">|</span>
            {t('footer.version')} {version}-{gitCommit}
            <span class="mx-1">|</span>
            <a href="https://github.com/archetypal-cz/bashkirtseff" class="hover:text-accent transition-colors inline-flex items-center gap-1" target="_blank" rel="noopener">
              <svg width="14" height="14" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z" /></svg>
              GitHub
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>
