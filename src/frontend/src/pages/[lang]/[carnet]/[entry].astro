---
import ReadingLayout from '../../../layouts/ReadingLayout.astro';
import ParagraphToolbar from '../../../components/reading/ParagraphToolbar.vue';
import LanguageSwitcher from '../../../components/reading/LanguageSwitcher.vue';
import { getCarnets, getCarnetEntries, getEntry, getEntryNavigation, getAvailableLanguages } from '../../../lib/content';
import { DIARY_LANGUAGES, type DiaryLanguageConfig } from '../../../lib/diary-lang-config';
import { createT } from '../../../i18n/astro';

export function getStaticPaths() {
  const paths: { params: { lang: string; carnet: string; entry: string }; props: { lang: DiaryLanguageConfig } }[] = [];

  for (const lang of DIARY_LANGUAGES) {
    const carnets = getCarnets(lang.contentPath);
    for (const carnet of carnets) {
      // Skip Carnet 000 - it has special handling in /[lang]/000/index.astro
      if (carnet.id === '000') continue;

      const entries = getCarnetEntries(carnet.id, lang.contentPath);
      for (const entry of entries) {
        paths.push({
          params: { lang: lang.urlPath, carnet: carnet.id, entry },
          props: { lang },
        });
      }
    }
  }

  return paths;
}

interface Props {
  lang: DiaryLanguageConfig;
}

const { lang } = Astro.props;
const { carnet, entry: entryDate } = Astro.params;
const t = createT(lang.uiLocale);

const entry = getEntry(carnet!, entryDate!, lang.contentPath);
const nav = getEntryNavigation(carnet!, entryDate!, lang.contentPath);
const availableLanguages = getAvailableLanguages(carnet!, entryDate!);
const carnetEntries = getCarnetEntries(carnet!, lang.contentPath).map(date => ({ date }));

if (!entry) {
  return Astro.redirect(`/${lang.urlPath}`);
}

// Process content to add paragraph anchors
const processedParagraphs = entry.paragraphs.map(p => ({
  ...p,
  htmlId: `p-${p.id.replace('.', '-')}`,
}));

// Generate description from first paragraph (strip HTML and truncate)
const firstParagraphText = entry.paragraphs[0]?.html
  ?.replace(/<[^>]*>/g, '')
  ?.slice(0, 160)
  ?.trim() + '...' || '';
const pageDescription = `${lang.isTranslation ? '' : 'Original '}Diary entry from ${entry.title} in Carnet ${carnet}. ${firstParagraphText}`;

// Format date for article metadata
const articleDate = entry.date ? entry.date.toISOString().split('T')[0] : undefined;

// Language value for LanguageSwitcher and sidebar data
const languageValue = lang.isTranslation ? lang.urlPath : '_original';

const diaryLabel = lang.isTranslation ? t('diary.diary') : 'Journal';
---

<ReadingLayout
  title={`${entry.title} â€” ${t('diary.notebook')} ${carnet}`}
  description={pageDescription}
  type="article"
  article={{
    publishedTime: articleDate,
    author: 'Marie Bashkirtseff',
  }}
>
  <!-- Sidebar data for unified menu (entry list, calendar, etc.) -->
  <script is:inline define:vars={{ __sidebarJSON: JSON.stringify({
    carnet,
    entries: carnetEntries,
    currentEntry: entryDate,
    language: languageValue,
    selectedDate: entryDate
  }) }}>
    window.__sidebarData = JSON.parse(__sidebarJSON);
  </script>

  <!-- Paragraph metadata for reading history -->
  <script is:inline define:vars={{ __historyJSON: JSON.stringify({
    carnet,
    entryDate,
    language: lang.urlPath,
    paragraphs: processedParagraphs.map(p => ({
      id: p.id,
      text: p.html.replace(/<[^>]*>/g, '').slice(0, 60),
    })),
  }) }}>
    window.__entryHistoryData = JSON.parse(__historyJSON);
  </script>

  <article class="max-w-3xl mx-auto">
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm text-muted">
      <a href={`/${lang.urlPath}`} class="hover:text-accent">{diaryLabel}</a>
      <span class="mx-2">&rsaquo;</span>
      <a href={`/${lang.urlPath}/${carnet}`} class="hover:text-accent">{t('diary.notebook')} {carnet}</a>
      <span class="mx-2">&rsaquo;</span>
      <span class="text-ink">{entryDate}</span>
    </nav>

    <!-- Entry Header: language + navigation bar -->
    <header class="mb-6">
      <div class="flex items-center justify-between mb-3">
        {/* Language Switcher with scroll preservation */}
        <LanguageSwitcher
          client:load
          currentLanguage={languageValue}
          carnet={carnet!}
          entryDate={entryDate!}
          availableLanguages={availableLanguages}
        />

        {/* Compact entry navigation */}
        <nav class="flex items-center gap-3 text-sm">
          {nav.prev ? (
            <a
              href={`/${lang.urlPath}/${carnet}/${nav.prev}`}
              class="flex items-center gap-1 text-muted hover:text-accent transition-colors"
              title={t('diary.previousEntry')}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              <span class="hidden sm:inline">{t('diary.previousEntry')}</span>
            </a>
          ) : (
            <span class="text-muted/30 flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </span>
          )}
          <a href={`/${lang.urlPath}/${carnet}`} class="text-muted hover:text-ink transition-colors" title={t('diary.carnetOverview')}>
            {t('diary.notebook')} {carnet}
          </a>
          {nav.next ? (
            <a
              href={`/${lang.urlPath}/${carnet}/${nav.next}`}
              class="flex items-center gap-1 text-muted hover:text-accent transition-colors"
              title={t('diary.nextEntry')}
            >
              <span class="hidden sm:inline">{t('diary.nextEntry')}</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          ) : (
            <span class="text-muted/30 flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          )}
        </nav>
      </div>

      <hr class="entry-divider" />
    </header>

    <!-- Entry Content -->
    <div class="prose-diary space-y-6">
      {processedParagraphs.map(paragraph => (
        <div
          id={paragraph.htmlId}
          class="paragraph-container scroll-mt-24"
          data-paragraph-id={paragraph.id}
          style={lang.isTranslation ? "perspective: 1000px;" : undefined}
        >
          <ParagraphToolbar
            client:visible
            paragraphId={paragraph.id}
            htmlContent={paragraph.html}
            originalText={lang.isTranslation ? paragraph.originalText : undefined}
            languages={lang.isTranslation ? paragraph.languages : undefined}
            translationLang={lang.isTranslation ? lang.urlPath : undefined}
            glossaryTags={paragraph.glossaryTags}
            language={lang.urlPath}
            contentLang={lang.contentLangAttr}
          />
        </div>
      ))}
    </div>

    {/* Footnotes */}
    {entry.footnotes.length > 0 && (
      <section class="footnotes">
        <h2 class="footnotes-title">{t('diary.notes')}</h2>
        {entry.footnotes.map(fn => (
          <div
            id={`fn-${fn.id}`}
            class="footnote-item"
            data-fn={fn.id}
          >
            <span set:html={fn.text} />
            <a href={`#fnref-${fn.id}`} class="footnote-backref" title={t('diary.backToText')}>&#x21A9;</a>
          </div>
        ))}
      </section>
    )}

    {/* Entry Navigation */}
    <nav class="mt-12 pt-8 border-t border-ink/10 flex justify-between items-center">
      {nav.prev ? (
        <a
          href={`/${lang.urlPath}/${carnet}/${nav.prev}`}
          class="flex items-center gap-2 text-accent hover:text-accent-light transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span>{t('diary.previousEntry')}</span>
        </a>
      ) : (
        <div />
      )}

      <a href={`/${lang.urlPath}/${carnet}`} class="text-muted hover:text-ink transition-colors">
        {t('diary.carnetOverview')}
      </a>

      {nav.next ? (
        <a
          href={`/${lang.urlPath}/${carnet}/${nav.next}`}
          class="flex items-center gap-2 text-accent hover:text-accent-light transition-colors"
        >
          <span>{t('diary.nextEntry')}</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      ) : (
        <div />
      )}
    </nav>
  </article>
</ReadingLayout>

<script>
  // Handle deep linking - highlight paragraph on page load
  document.addEventListener('DOMContentLoaded', () => {
    const hash = window.location.hash;
    if (hash) {
      const element = document.querySelector(hash);
      if (element) {
        element.classList.add('paragraph-highlight');
        setTimeout(() => {
          element.classList.remove('paragraph-highlight');
        }, 2000);
      }
    }
  });
</script>

<script src="../../../scripts/footnote-popover.ts"></script>

<script>
  // Track paragraph reading via IntersectionObserver
  // When a paragraph scrolls out of the viewport upward, fire 'paragraph-read' event
  document.addEventListener('DOMContentLoaded', () => {
    const data = (window as any).__entryHistoryData;
    if (!data) return;

    const paragraphTextMap = new Map<string, string>();
    for (const p of data.paragraphs) {
      paragraphTextMap.set(p.id, p.text);
    }

    const observer = new IntersectionObserver(
      (entries) => {
        for (const entry of entries) {
          // Paragraph has left the viewport going upward (user scrolled past it)
          if (!entry.isIntersecting && entry.boundingClientRect.top < 0) {
            const paragraphId = (entry.target as HTMLElement).dataset.paragraphId;
            if (!paragraphId) continue;

            const text = paragraphTextMap.get(paragraphId) || '';
            window.dispatchEvent(new CustomEvent('paragraph-read', {
              detail: {
                paragraphId,
                text,
                carnet: data.carnet,
                entryDate: data.entryDate,
                language: data.language,
                url: `/${data.language}/${data.carnet}/${data.entryDate}#p-${paragraphId.replace('.', '-')}`,
              },
            }));
          }
        }
      },
      { threshold: 0 }
    );

    document.querySelectorAll('.paragraph-container').forEach((el) => {
      observer.observe(el);
    });
  });
</script>
