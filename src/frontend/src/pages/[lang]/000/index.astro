---
import ReadingLayout from '../../../layouts/ReadingLayout.astro';
import ParagraphMenu from '../../../components/reading/ParagraphMenu.vue';
import FlipParagraph from '../../../components/reading/FlipParagraph.vue';
import { getCarnet000Merged, hasCarnet000Content, hasCarnet000Translation } from '../../../lib/content';
import { DIARY_LANGUAGES, type DiaryLanguageConfig } from '../../../lib/diary-lang-config';
import { createT } from '../../../i18n/astro';

export function getStaticPaths() {
  return DIARY_LANGUAGES.map(lang => ({
    params: { lang: lang.urlPath },
    props: { lang },
  }));
}

interface Props {
  lang: DiaryLanguageConfig;
}

const { lang } = Astro.props;
const t = createT(lang.uiLocale);
const basePath = `/${lang.urlPath}`;

const entry = getCarnet000Merged(lang.contentPath);

if (!entry) {
  return Astro.redirect(basePath);
}

const processedParagraphs = entry.paragraphs.map(p => ({
  ...p,
  htmlId: `p-${p.id.replace('.', '-')}`,
}));

// Cross-link to other language version
const hasOriginal = !lang.isTranslation || hasCarnet000Content('_original');
const hasTranslation = lang.isTranslation || hasCarnet000Translation('cz');

const diaryLabel = lang.isTranslation ? t('diary.diary') : 'Journal';
---

<ReadingLayout title={`${t('diary.preface')} — Marie Bashkirtseff`}>
  <article class="max-w-3xl mx-auto">
    <nav class="mb-6 text-sm text-muted">
      <a href={basePath} class="hover:text-accent">{diaryLabel}</a>
      <span class="mx-2">&rsaquo;</span>
      <span class="text-ink">{t('diary.notebook')} 000</span>
    </nav>

    <header class="mb-8 pb-6 border-b border-ink/10">
      <h1 class="text-3xl md:text-4xl font-normal text-ink mb-2" style="font-family: var(--font-serif);">
        {entry.title}
      </h1>

      <p class="text-ink-light leading-relaxed mb-4">
        {t('diary.prefaceNote')}
      </p>

      <div class="flex items-center gap-4 text-sm text-muted">
        <span>Mai 1884</span>
        <span class="text-ink/30">|</span>
        <span>{entry.paragraphs.length} paragraphs</span>

        {lang.isTranslation && hasOriginal && (
          <>
            <span class="text-ink/30">|</span>
            <a href="/original/000" class="text-accent hover:text-accent-light">
              {t('diary.frenchOriginal')} &rarr;
            </a>
          </>
        )}
        {!lang.isTranslation && hasTranslation && (
          <>
            <span class="text-ink/30">|</span>
            <a href="/cz/000" class="text-accent hover:text-accent-light">
              Český překlad &rarr;
            </a>
          </>
        )}
      </div>
    </header>

    <div class="prose-diary space-y-6">
      {processedParagraphs.map(paragraph => (
        <div
          id={paragraph.htmlId}
          class="group relative paragraph-container scroll-mt-24"
          data-paragraph-id={paragraph.id}
          style={lang.isTranslation ? "perspective: 1000px;" : undefined}
        >
          {lang.isTranslation ? (
            <>
              <FlipParagraph
                client:visible
                paragraphId={paragraph.id}
                htmlContent={paragraph.html}
                originalText={paragraph.originalText}
                languages={paragraph.languages}
                translationLang={lang.urlPath}
              />

              <div class="absolute -top-3 right-16 opacity-50 hover:opacity-100 group-hover:opacity-100 transition-opacity z-10" style="transform: translateZ(100px); transform-style: flat;">
                <ParagraphMenu
                  client:visible
                  paragraphId={paragraph.id}
                  glossaryTags={paragraph.glossaryTags}
                  language={lang.urlPath}
                />
              </div>
            </>
          ) : (
            <>
              <p class="text-lg leading-relaxed text-ink" lang={lang.contentLangAttr} set:html={paragraph.html} />

              <div class="absolute -top-3 right-0 opacity-50 hover:opacity-100 group-hover:opacity-100 transition-opacity z-10">
                <ParagraphMenu
                  client:visible
                  paragraphId={paragraph.id}
                  glossaryTags={paragraph.glossaryTags}
                  language={lang.urlPath}
                />
              </div>
            </>
          )}
        </div>
      ))}
    </div>

    {/* Footnotes */}
    {entry.footnotes.length > 0 && (
      <section class="footnotes">
        <h2 class="footnotes-title">{t('diary.notes')}</h2>
        {entry.footnotes.map(fn => (
          <div
            id={`fn-${fn.id}`}
            class="footnote-item"
            data-fn={fn.id}
          >
            <span set:html={fn.text} />
            <a href={`#fnref-${fn.id}`} class="footnote-backref" title={t('diary.backToText')}>&#x21A9;</a>
          </div>
        ))}
      </section>
    )}

    <nav class="mt-12 pt-8 border-t border-ink/10 flex justify-between items-center">
      <a href={basePath} class="text-muted hover:text-ink transition-colors">
        &larr; {diaryLabel}
      </a>

      <a href={`${basePath}/001`} class="flex items-center gap-2 text-accent hover:text-accent-light transition-colors">
        <span>{t('diary.notebook')} 001</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </nav>
  </article>
</ReadingLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const hash = window.location.hash;
    if (hash) {
      const element = document.querySelector(hash);
      if (element) {
        element.classList.add('paragraph-highlight');
        setTimeout(() => {
          element.classList.remove('paragraph-highlight');
        }, 2000);
      }
    }
  });
</script>

<script src="../../../scripts/footnote-popover.ts"></script>
