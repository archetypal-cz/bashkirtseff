---
import ReadingLayout from '../../../layouts/ReadingLayout.astro';
import ParagraphMenu from '../../../components/reading/ParagraphMenu.vue';
import LanguageSwitcher from '../../../components/reading/LanguageSwitcher.vue';
import BookSidebar from '../../../components/reading/BookSidebar.vue';
import FlipParagraph from '../../../components/reading/FlipParagraph.vue';
import { getCarnets, getCarnetEntries, getEntry, getEntryNavigation, getAvailableLanguages } from '../../../lib/content';

export function getStaticPaths() {
  const czCarnets = getCarnets('cz');

  const paths = [];
  for (const carnet of czCarnets) {
    // Skip Carnet 000 - it has special handling in /cz/000/index.astro
    if (carnet.id === '000') continue;

    const entries = getCarnetEntries(carnet.id, 'cz');
    for (const entry of entries) {
      paths.push({
        params: { carnet: carnet.id, entry },
      });
    }
  }

  return paths;
}

const { carnet, entry: entryDate } = Astro.params;
const language = 'cz';

const entry = getEntry(carnet!, entryDate!, 'cz');
const nav = getEntryNavigation(carnet!, entryDate!, 'cz');
const availableLanguages = getAvailableLanguages(carnet!, entryDate!);
const carnetEntries = getCarnetEntries(carnet!, 'cz').map(date => ({ date }));

if (!entry) {
  return Astro.redirect('/cz');
}

const formatDate = (date: Date | null, entryId: string) => {
  // Section-based entries (e.g., "000-01") don't have dates
  if (!date) {
    if (/^\d{3}-\d{2}$/.test(entryId)) {
      const section = parseInt(entryId.split('-')[1], 10);
      return `Oddíl ${section}`;
    }
    return entryId;
  }
  return date.toLocaleDateString('cs-CZ', {
    weekday: 'long',
    day: 'numeric',
    month: 'long',
    year: 'numeric',
  });
};

// Process content to add paragraph anchors and styling
const processedParagraphs = entry.paragraphs.map(p => ({
  ...p,
  htmlId: `p-${p.id.replace('.', '-')}`,
}));

// Generate description from first paragraph (strip HTML and truncate)
const firstParagraphText = entry.paragraphs[0]?.html
  ?.replace(/<[^>]*>/g, '')
  ?.slice(0, 160)
  ?.trim() + '...' || '';
const pageDescription = `Diary entry from ${entry.title} in Carnet ${carnet}. ${firstParagraphText}`;

// Format date for article metadata
const articleDate = entry.date ? entry.date.toISOString().split('T')[0] : undefined;
---

<ReadingLayout
  title={`${entry.title} — Sešit ${carnet}`}
  description={pageDescription}
  type="article"
  article={{
    publishedTime: articleDate,
    author: 'Marie Bashkirtseff',
  }}
>
  <!-- Carnet sidebar -->
  <div class="fixed top-20 left-4 z-50 hidden lg:block">
    <BookSidebar
      client:load
      carnet={carnet!}
      currentEntry={entryDate!}
      entries={carnetEntries}
      language="cz"
    />
  </div>

  <article class="max-w-3xl mx-auto">
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm text-muted">
      <a href="/cz" class="hover:text-accent">Deník</a>
      <span class="mx-2">›</span>
      <a href={`/cz/${carnet}`} class="hover:text-accent">Sešit {carnet}</a>
      <span class="mx-2">›</span>
      <span class="text-ink">{entryDate}</span>
    </nav>

    <!-- Entry Header -->
    <header class="mb-8 pb-6 border-b border-ink/10">
      <h1 class="text-2xl md:text-3xl font-normal text-ink mb-2" style="font-family: var(--font-serif);">
        {entry.title}
      </h1>

      <div class="flex items-center gap-4 text-sm text-muted">
        <time datetime={entryDate}>
          {formatDate(entry.date, entry.id)}
        </time>

        {/* Language Switcher with scroll preservation */}
        <LanguageSwitcher
          client:load
          currentLanguage="cz"
          carnet={carnet!}
          entryDate={entryDate!}
          availableLanguages={availableLanguages}
        />
      </div>
    </header>

    <!-- Entry Content -->
    <div class="prose-diary space-y-6">
      {processedParagraphs.map(paragraph => (
        <div
          id={paragraph.htmlId}
          class="group relative paragraph-container scroll-mt-24"
          data-paragraph-id={paragraph.id}
          style="perspective: 1000px;"
        >
          {/* Flip card with translation and original */}
          <FlipParagraph
            client:visible
            paragraphId={paragraph.id}
            htmlContent={paragraph.html}
            originalText={paragraph.originalText}
            languages={paragraph.languages}
            translationLang="cz"
          />

          {/* Paragraph menu - positioned at top right, next to flip button */}
          <div class="absolute -top-3 right-8 opacity-50 hover:opacity-100 group-hover:opacity-100 transition-opacity z-10" style="transform: translateZ(100px); transform-style: flat;">
            <ParagraphMenu
              client:visible
              paragraphId={paragraph.id}
              glossaryTags={paragraph.glossaryTags}
              language="cz"
            />
          </div>
        </div>
      ))}
    </div>

    {/* Footnotes */}
    {entry.footnotes.length > 0 && (
      <section class="footnotes">
        <h2 class="footnotes-title">Poznámky</h2>
        {entry.footnotes.map(fn => (
          <div
            id={`fn-${fn.id}`}
            class="footnote-item"
            data-fn={fn.id}
            set:html={fn.text}
          />
        ))}
      </section>
    )}

    {/* Entry Navigation */}
    <nav class="mt-12 pt-8 border-t border-ink/10 flex justify-between items-center">
      {nav.prev ? (
        <a
          href={`/cz/${carnet}/${nav.prev}`}
          class="flex items-center gap-2 text-accent hover:text-accent-light transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span>Předchozí záznam</span>
        </a>
      ) : (
        <div />
      )}

      <a href={`/cz/${carnet}`} class="text-muted hover:text-ink transition-colors">
        Přehled sešitu
      </a>

      {nav.next ? (
        <a
          href={`/cz/${carnet}/${nav.next}`}
          class="flex items-center gap-2 text-accent hover:text-accent-light transition-colors"
        >
          <span>Další záznam</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      ) : (
        <div />
      )}
    </nav>
  </article>
</ReadingLayout>

<script>
  // Handle deep linking - highlight paragraph on page load
  document.addEventListener('DOMContentLoaded', () => {
    const hash = window.location.hash;
    if (hash) {
      const element = document.querySelector(hash);
      if (element) {
        element.classList.add('paragraph-highlight');
        setTimeout(() => {
          element.classList.remove('paragraph-highlight');
        }, 2000);
      }
    }
  });
</script>
