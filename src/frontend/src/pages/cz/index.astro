---
import ReadingLayout from '../../layouts/ReadingLayout.astro';
import FilterOverlay from '../../components/filter/FilterOverlay.vue';
import { getYears, getCarnets, getCarnetsByYear } from '../../lib/content';

const years = getYears('_original');
const czCarnets = getCarnets('cz');

// Build year info with translation stats
const yearsWithStats = years.map(yearInfo => {
  // Get carnets that have entries in this year
  const czCarnetsInYear = getCarnetsByYear(yearInfo.year, 'cz');
  const translatedCount = czCarnetsInYear.reduce((sum, c) => sum + c.entries.length, 0);

  return {
    ...yearInfo,
    translatedCount,
    hasTranslations: translatedCount > 0,
  };
});

const totalEntries = yearsWithStats.reduce((sum, y) => sum + y.entryCount, 0);
const totalTranslated = yearsWithStats.reduce((sum, y) => sum + y.translatedCount, 0);
---

<ReadingLayout title="Deník Marie Bashkirtseff — České překlady">
  <div class="max-w-4xl mx-auto">
    <header class="mb-12 text-center">
      <h1 class="text-3xl font-normal text-ink mb-4" style="font-family: var(--font-serif);">
        Deník Marie Bashkirtseff
      </h1>
      <p class="text-ink-light mb-6">
        Kompletní, necenzurované vydání v českém překladu
      </p>

      <div class="flex items-center justify-center gap-6 text-sm text-muted">
        <span>{years.length} let</span>
        <span>•</span>
        <span>{totalEntries} záznamů</span>
        <span>•</span>
        <span class="text-accent">{totalTranslated} přeloženo</span>
      </div>

      {totalTranslated < totalEntries && (
        <div class="mt-4 max-w-md mx-auto">
          <div class="h-2 bg-sepia rounded-full overflow-hidden">
            <div
              class="h-full bg-accent rounded-full transition-all"
              style={`width: ${(totalTranslated / totalEntries) * 100}%`}
            />
          </div>
          <p class="text-xs text-muted mt-1">
            {Math.round((totalTranslated / totalEntries) * 100)}% celkově přeloženo
          </p>
        </div>
      )}
    </header>

    <!-- Preface link -->
    <a
      href="/cz/000"
      class="block p-6 rounded-lg border bg-parchment border-ink/10 hover:border-accent hover:shadow-lg transition-all mb-8"
    >
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-lg text-ink mb-1">
            Předmluva
          </h2>
          <p class="text-sm text-muted">
            Retrospektivní předmluva z května 1884
          </p>
        </div>
        <svg class="w-5 h-5 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </div>
    </a>

    <FilterOverlay client:load pageType="year-list" />

    <!-- Year grid -->
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {yearsWithStats.map(year => (
        <a
          href={`/cz/${year.year}`}
          data-filter-year={year.year}
          class={`block p-6 rounded-lg border transition-all ${
            year.hasTranslations
              ? 'bg-parchment border-ink/10 hover:border-accent hover:shadow-lg'
              : 'bg-sepia/30 border-ink/5 hover:border-ink/20'
          }`}
        >
          <div class="flex items-start justify-between mb-3">
            <span class="text-3xl font-light text-accent">
              {year.year}
            </span>
            {!year.hasTranslations && (
              <span class="text-xs px-2 py-1 bg-muted/20 text-muted rounded">
                FR
              </span>
            )}
          </div>

          <p class="text-sm text-muted mb-1">
            Marie: {year.marieAge} let
          </p>

          <div class="flex items-center justify-between text-sm">
            <span class="text-muted">
              {year.carnets.length} sešitů
            </span>
            <span class="text-muted" data-filter-count={`year-entries:${year.year}`}>
              {year.entryCount} záznamů
            </span>
          </div>

          <div class="mt-3">
            <div class="h-1.5 bg-ink/10 rounded-full overflow-hidden">
              <div
                class="h-full bg-accent rounded-full transition-all duration-300"
                style={`width: ${year.entryCount > 0 ? (year.translatedCount / year.entryCount) * 100 : 0}%`}
              />
            </div>
            <p class="text-xs text-muted mt-1">
              {year.translatedCount}/{year.entryCount} přeloženo
              {year.entryCount > 0 && (
                <span class="text-accent ml-1">
                  ({Math.round((year.translatedCount / year.entryCount) * 100)}%)
                </span>
              )}
            </p>
          </div>
        </a>
      ))}
    </div>

    {yearsWithStats.length === 0 && (
      <div class="text-center py-12 text-muted">
        <p>Žádné záznamy nebyly nalezeny.</p>
      </div>
    )}

    <!-- All carnets link -->
    <div class="mt-8 pt-8 border-t border-ink/10 text-center">
      <a href="/cz/carnets" class="text-sm text-muted hover:text-accent transition-colors">
        Zobrazit všechny sešity →
      </a>
    </div>
  </div>
</ReadingLayout>
