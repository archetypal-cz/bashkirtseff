---
// Redirect page - detects browser language and redirects to appropriate homepage
// Uses navigator.languages (ordered by user preference) for better detection
---
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Marie Bashkirtseff</title>
  <script>
    // Check localStorage first (user's explicit choice)
    const saved = localStorage.getItem('ui-language');
    if (saved && ['cs', 'fr', 'en', 'uk'].includes(saved)) {
      window.location.replace('/home/' + saved);
    } else {
      // Detect from browser preferences (navigator.languages is ordered by user preference)
      const browserLangs = navigator.languages || [navigator.language || navigator.userLanguage];
      const supported = ['cs', 'en', 'fr', 'uk'];

      let targetLang = 'en'; // default fallback
      for (const browserLang of browserLangs) {
        const lang = browserLang.toLowerCase().split('-')[0];
        // Handle cz -> cs mapping (some browsers may report 'cz')
        const normalized = lang === 'cz' ? 'cs' : lang;
        if (supported.includes(normalized)) {
          targetLang = normalized;
          break;
        }
      }

      window.location.replace('/home/' + targetLang);
    }
  </script>
  <noscript>
    <meta http-equiv="refresh" content="0; url=/home/en">
  </noscript>
</head>
<body>
  <p>Redirecting...</p>
</body>
</html>
