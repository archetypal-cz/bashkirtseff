{
  "name": "bashkirtseff-diary",
  "version": "1.0.0",
  "description": "Marie Bashkirtseff's complete diary - translation and publication project",
  "private": true,
  "type": "module",
  "workspaces": [
    "shared",
    "scripts/ts",
    "frontend"
  ],
  "scripts": {
    "build": "npm run build:shared && npm run build:cli",
    "build:shared": "npm run build -w @bashkirtseff/shared",
    "build:cli": "npm run build -w @bashkirtseff/cli",
    "build:frontend": "npm run build -w bashkirtseff-frontend",
    "dev:frontend": "npm run dev -w bashkirtseff-frontend",
    "diary": "npx tsx scripts/ts/cli.ts",
    "test:parser": "npm run diary -- parse src/_original/01/1873-01-01.md --pretty"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.58.1"
  }
}
